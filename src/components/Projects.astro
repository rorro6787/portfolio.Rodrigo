---
import GitHub from "./icons/GitHub.astro"
import ORACLE from "./icons/Oracle.astro"
import MAIL from "./icons/System.astro"
import Pytorch from "./icons/Pytorch.astro"
import Python from "./icons/Python.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Numpy from "./icons/Numpy.astro"
import Yolo from "./icons/Yolo.astro"
import HuggingFace from "./icons/HuggingFace.astro"
import Next from "./icons/Next.astro"
import Pandas from "./icons/Pandas.astro"
import { preview } from "astro"

const TAGS = {
  Oracle: {
    name: "Oracle Cloud Infrastucture",
    class: "bg-[#003159] text-white",
    icon: ORACLE,
  },
  Next: {
    name: "React & Next.js",
    class: "bg-[#003159] text-white",
    icon: Next,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#003159] text-white",
    icon: Python,
  },
  PYTORCH: {
    name: "Pytorch",
    class: "bg-[#003159] text-White",
    icon: Pytorch,
  },
  NUMPY: {
    name: "Numpy",
    class: "bg-[#003159] text-White",
    icon: Numpy,
  },
  YOLO: {
    name: "YOLO",
    class: "bg-[#003159] text-White",
    icon: Yolo,
  },
  HUGGINGFACE: {
    name: "HuggingFace",
    class: "bg-[#003159] text-White",
    icon: HuggingFace,
  },
  PANDAS: {
    name: "Pandas",
    class: "bg-[#0077B6] text-White",
    icon: Pandas,
  },
}

const PROJECTS = [
  {
    title: "NND",
    description: "Segmenting sclerosis lesions on 3‑D MRI volumes is a critical yet time‑consuming step in clinical workflows. This repository contains the open‑source code, experiments and analysis accompanying my bachelor’s thesis, which investigates the synergy between YOLOv11 object detection and nnUNet semantic segmentation, enhanced by a novel 3‑D consensus‑ensemble strategy.",
    link: "https://github.com/rorro6787/NND/blob/main/information/TFG_Rodrigo_Carreira_Villalta.pdf",
    github: "https://github.com/rorro6787/NND",
    preview: "https://pypi.org/project/nnd/",
    image: "/brain.png",
    tags: [TAGS.PYTHON, TAGS.NUMPY, TAGS.PANDAS, TAGS.PYTORCH, TAGS.YOLO],
  },
{
    title: "SAES",
    description: "SAES is a Python library designed to analyse and compare the performance of stochastic algorithms (e.g. metaheuristics and machine learning techniques) on multiple problems. It includes statistical tests (Friedman, Wilcoxon, Nemenyi), data visualization tools (boxplots, critical distance plots), automatic LaTeX report generation, now with support for multi-objective Pareto front plots in 2D, 3D, parallel coordinates for higher dimensions and Bayesian Posterior Plot.",
    link: "https://jMetal.github.io/SAES/",
    github: "https://github.com/jMetal/SAES",
    preview: "https://pypi.org/project/SAES/",
    image: "/projects/SAES_logo.png",
    tags: [TAGS.PYTHON, TAGS.NUMPY, TAGS.PANDAS],
  },
  
]
---


<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github, preview }, index) => (
    <article class="project-item flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0 md:items-start" style={`animation-delay: ${index * 0.2}s`}>
  <div class="w-full md:w-3/5 project-content flex order-2 md:order-1">
    <div class="bg-gradient-to-br from-gray-50 to-slate-50 dark:from-gray-900/50 dark:to-slate-900/50 p-6 rounded-xl border border-gray-200 dark:border-gray-700/50 hover:shadow-xl hover:shadow-gray-500/10 dark:hover:shadow-gray-900/30 transition-all duration-300 flex flex-col w-full">
      <div class="flex items-start gap-3 mb-4">
        <div class="flex-shrink-0 mt-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-purple-600 dark:text-purple-400" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M7 8l-4 4l4 4" />
            <path d="M17 8l4 4l-4 4" />
            <path d="M14 4l-4 16" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100 project-title flex-1">
          {title}
        </h3>
      </div>

      <div class="flex flex-wrap gap-2 mb-4">
        {tags.map((tag, tagIndex) => (
          <span
            class={`project-tag inline-flex items-center gap-1.5 rounded-full text-xs ${tag.class} py-1.5 px-3`}
            style={`animation-delay: ${index * 0.2 + tagIndex * 0.1 + 0.4}s`}
          >
            <tag.icon class="size-4" />
            {tag.name}
          </span>
        ))}
      </div>

      <p class="text-gray-700 dark:text-gray-300 leading-relaxed project-description flex-1 mb-4">
        {description}
      </p>

      <footer class="flex flex-wrap items-center gap-3 pt-4 border-t border-gray-200 dark:border-gray-700 project-footer">
        {github && (
          <LinkButton href={github}>
            <GitHub class="size-5" />
            Code
          </LinkButton>
        )}
        
        {link && (
          <LinkButton href={link}>
            <Link class="size-5" />
            Docs
          </LinkButton>
        )}
        
        {preview && (
          <LinkButton href={preview}>
            <MAIL class="size-5" />
            PyPI
          </LinkButton>
        )}
      </footer>
    </div>
  </div>

  <div class="w-full md:w-2/5 project-image-wrapper order-1 md:order-2">
    <div class="relative transition duration-500 ease-in-out transform shadow-xl overflow-hidden rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50 bg-gray-100 dark:bg-gray-900">
      <img alt={title} class="w-full h-auto object-contain transition duration-500 md:group-hover:scale-105" src={image} />
    </div>
  </div>
</article>

    ))
  }
</div>

<style>
  .project-item {
    opacity: 0;
    animation: fadeInScale 0.8s ease-out forwards;
  }

  .project-image-wrapper {
    opacity: 0;
    animation: slideInRight 0.8s ease-out forwards;
    animation-delay: inherit;
  }

  .project-content {
    opacity: 0;
    animation: slideInLeft 0.8s ease-out forwards;
    animation-delay: inherit;
  }

  .project-title {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .project-title {
    animation-delay: calc(var(--delay, 0s) + 0.2s);
  }

  .project-tag {
    opacity: 0;
    animation: popIn 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
  }

  .project-description {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .project-description {
    animation-delay: calc(var(--delay, 0s) + 0.5s);
  }

  .project-footer {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .project-footer {
    animation-delay: calc(var(--delay, 0s) + 0.7s);
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(40px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes popIn {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>



